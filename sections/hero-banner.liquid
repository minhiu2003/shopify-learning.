<!-- sections/hero-banner.liquid -->
<section class="relative w-full h-screen bg-cover bg-center" style="background-image: url({{ section.settings.background_image | image_url: width: 1920 }});">
  <div class="absolute inset-0 bg-black bg-opacity-30"></div> <!-- lớp overlay mờ -->

  <div class="relative flex items-center justify-center h-full px-4">
    <div class="bg-white bg-opacity-90 p-8 md:p-12 rounded shadow-lg text-center max-w-xl">
      {% if section.settings.title != blank %}
        <h2 class="text-2xl md:text-4xl font-bold mb-4">{{ section.settings.title }}</h2>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <p class="text-gray-700 mb-6">{{ section.settings.description }}</p>
      {% endif %}
      
      {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
        <a href="{{ section.settings.cta_url }}" class="inline-block px-6 py-3 bg-black text-white font-semibold rounded hover:bg-gray-800 transition">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Your Title Here"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Your description goes here."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}
